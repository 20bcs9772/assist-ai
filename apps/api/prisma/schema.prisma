generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum OrderStatus {
  PENDING
  SHIPPED
  DELIVERED
  CANCELLED
  RETURNED
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}

enum PaymentMode {
  CARD
  UPI
  NET_BANKING
}

enum MessageRole {
  USER
  AGENT
}

enum AgentType {
  SUPPORT
  ORDER
  BILLING
}

model Order {
  id             String      @id @default(uuid())
  placedBy       String
  items          Json
  status         OrderStatus @default(PENDING)
  cancelReason   String?
  returnReason   String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  cancelledAt    DateTime?
  returnedAt     DateTime?
  deliveredAt    DateTime?
  payments       Payment[]

  @@map("orders")
}

model Payment {
  id              String        @id @default(uuid())
  orderId         String
  amount          Float
  currency        String        @default("INR")
  status          PaymentStatus @default(PENDING)
  mode            PaymentMode
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  order           Order         @relation(fields: [orderId], references: [id])

  @@map("payments")
}

model Chat {
  id          String     @id @default(uuid())
  name        String?
  active      Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  messages    Message[]
  agentLogs   AgentAction[]

  @@map("chats")
}

model Message {
  id          String      @id @default(uuid())
  chatId      String
  role        MessageRole
  agentType   AgentType?
  content     String
  createdAt   DateTime    @default(now())
  chat        Chat        @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@map("messages")
}

model AgentAction {
  id          String     @id @default(uuid())
  chatId      String
  agentType   AgentType
  action      String
  metadata    Json?
  createdAt   DateTime   @default(now())
  chat        Chat       @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@map("agent_actions")
}